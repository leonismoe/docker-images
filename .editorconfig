root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true

[Dockerfile]
indent_size = 4
tab_width = 4

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.json]
insert_final_newline = false

[*.{patch,diff}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.{sh,c,h,cpp,hpp,go}]
indent_size = 4
tab_width = 4

[_scripts/*]
indent_size = 4
tab_width = 4
